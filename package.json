{
  "name": "@beqom/alto-ui",
  "version": "0.21.18",
  "main": "index.js",
  "repository": "https://github.com/beqom/alto",
  "author": "Renaud Tertrais <renaud.tertrais@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test:output": "jest --json --outputFile=.jest-test-results.json || true",
    "test": "jest --coverage",
    "watch:test": "jest --watch",
    "lint:style": "stylelint \"src/*.scss\" \"src/**/*.scss\" \"src/*.css\" \"src/**/*.css\"",
    "lint:script": "eslint .",
    "lint": "npm run lint:script && npm run lint:style",
    "clean:build": "rimraf build",
    "clean:dist": "rimraf dist",
    "build:storybook": "cross-env NODE_ENV=development build-storybook -c .storybook -o build/storybook",
    "start:storybook": "start-storybook -p 9006 -c .storybook",
    "prebuild:alto-ui": "npm run lint && npm run test && npm run clean:dist && copyfiles ./package.json ./README.md ./dist",
    "build:alto-ui": "cross-env NODE_ENV=production babel ./src/alto-ui -d ./dist --copy-files --ignore story,__tests__,README.md",
    "watch:alto-ui": "cross-env NODE_ENV=production babel ./src/alto-ui -d ./dist -w --copy-files --ignore story,__tests__,README.md",
    "sass:app": "node-sass ./src/app/scss/site.scss ./src/app/static/css/site.css",
    "hugo:app": "hugo --source ./src/app -d ../../build",
    "serve:app": "browser-sync start --config ./bs-config.js",
    "build:app": "npm run sass:app && npm run hugo:app",
    "start:app": "npm run sass:app -- -w | npm run hugo:app -- --watch | npm run serve:app",
    "prebuild:all": "npm run clean:build && npm run lint && npm run test",
    "build:all": "npm run build:app && npm run build:storybook",
    "predeploy": "npm run build:all",
    "deploy": "gh-pages -d build",
    "build": "npm run build:alto-ui",
    "watch": "npm run watch:alto-ui",
    "start": "npm run start:storybook"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/polyfill": "^7.7.0",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-react": "^7.7.0",
    "@storybook/addon-a11y": "^5.1.8",
    "@storybook/addon-actions": "^5.1.8",
    "@storybook/addon-centered": "^5.1.8",
    "@storybook/addon-info": "^5.1.8",
    "@storybook/addon-jest": "^5.1.8",
    "@storybook/addon-knobs": "^5.1.8",
    "@storybook/addon-options": "^5.1.8",
    "@storybook/react": "^5.1.8",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^24.9.0",
    "browser-sync": "^2.26.7",
    "clarity-icons": "^0.10.17",
    "copyfiles": "^2.0.0",
    "cross-env": "^5.1.1",
    "css-loader": "^3.0.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^5.0.0",
    "eslint-import-resolver-webpack": "^0.11.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.0",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "gh-pages": "^1.0.0",
    "github-markdown-css": "^2.9.0",
    "hugo-cli": "^0.5.4",
    "jest-cli": "^24.9.0",
    "jest-junit": "^9.0.0",
    "jquery": "^3.5.0",
    "node-sass": "^4.12.0",
    "prop-types": "^15.6.1",
    "raw-loader": "^0.5.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-rnd": "^10.1.1",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "storybook-addon-jsx": "^7.1.2",
    "styled-components": "^2.2.3",
    "stylelint": "^9.2.1",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-scss": "^3.1.0",
    "webpack": "^3.10.0",
    "webpack-merge": "^4.1.1"
  },
  "dependencies": {
    "@webcomponents/custom-elements": "^1.3.1",
    "bigeval": "^3.1.0",
    "classnames": "^2.2.5",
    "dompurify": "^1.0.10",
    "downshift": "^3.2.10",
    "focus-trap-react": "^3.1.2",
    "lodash.clone": "^4.5.0",
    "lodash.compose": "^2.4.1",
    "lodash.debounce": "^4.0.8",
    "lodash.get": "^4.4.2",
    "lodash.isequal": "^4.5.0",
    "lodash.isnumber": "^3.0.3",
    "lodash.omit": "^4.5.0",
    "lodash.range": "^3.2.0",
    "lodash.setwith": "^4.3.2",
    "lodash.throttle": "^4.1.1",
    "luxon": "^1.2.0",
    "quill-magic-url": "^1.0.3",
    "quill-mention": "^2.1.5",
    "react-beautiful-dnd": "^12.1.1",
    "react-day-picker": "^7.1.4",
    "react-draggable": "^4.1.0",
    "react-quill": "^1.3.3",
    "react-transition-group": "^4.3.0"
  },
  "peerDependencies": {
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.3.2"
  },
  "browserslist": [
    "last 3 versions",
    "IE >= 11"
  ],
  "jest": {
    "verbose": true,
    "coverageDirectory": "coverage/",
    "notify": true,
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/"
    ],
    "setupFiles": [
      "<rootDir>/.jest-shim.js",
      "<rootDir>/.jest-setup.js"
    ],
    "transform": {
      ".*": "<rootDir>/node_modules/babel-jest"
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.s?css$": "<rootDir>/__mocks__/styleMock.js"
    },
    "reporters": [
      "default",
      "jest-junit"
    ],
    "collectCoverage": false,
    "collectCoverageFrom": [
      "src/alto-ui/**/*.{js,jsx}",
      "src/alto-ui/*.{js,jsx}",
      "!src/alto-ui/**/__tests__/*",
      "!src/alto-ui/**/index.js",
      "!src/alto-ui/**/story.js"
    ]
  },
  "jest-junit": {
    "suiteName": "Alto UI jest tests",
    "output": "./coverage/junit.xml"
  }
}
